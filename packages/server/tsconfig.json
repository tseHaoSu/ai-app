{
   "compilerOptions": {
      // Environment setup & latest features
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "ESNext", // ✅ Changed from "Preserve"
      "moduleDetection": "force",
      "jsx": "react-jsx",
      "allowJs": true,

      // Bundler mode
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "verbatimModuleSyntax": true,
      "noEmit": true,

      // Best practices
      "strict": true,
      "skipLibCheck": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,

      // ✅ Enable these for better error detection
      "noUnusedLocals": true, // ✅ Changed from false
      "noUnusedParameters": true, // ✅ Changed from false
      "noPropertyAccessFromIndexSignature": false,

      // ✅ Additional helpful settings
      "esModuleInterop": true, // ✅ Added - helps with imports
      "forceConsistentCasingInFileNames": true, // ✅ Added - prevents case issues
      "resolveJsonModule": true, // ✅ Added - allows importing JSON
      "isolatedModules": true // ✅ Added - required for bundlers
   },

   // ✅ Specify what to include/exclude
   "include": ["**/*.ts"],
   "exclude": ["node_modules", "dist", "build"]
}
